{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://reciperealm.com/recipeRating.schema.json",
    "type": "object",
    "properties": {
      "recipe": {
        "type": "string",
        "ref": "recipe"
      },
      "user": {
        "type": "string",
        "ref": "user"
      },
      "comment": {
        "type": "string",
        "minLenth": 1,
        "maxLength": 500
      }
    },
    "additionalProperties": false,
    "required": [
      "recipe",
      "user",
      "comment"
    ]
  }