{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://reciperealm.com/recipeNew.schema.json",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "description": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "ingredients": {
        "type": "string",
        "minLength": 1
      },
      "instructions": {
        "type": "string"
      },
      "createdBy": {
        "type": "string",
        "ref": "user"
      },
      "createdOn": {
        "type": "string",
        "format": "date-time"
      }
    },
    "additionalProperties": false,
    "required": [
      "title",
      "ingredients",
      "instructions",
      "createdBy",
      "createdOn"
    ]
  }