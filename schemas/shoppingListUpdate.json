{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://reciperealm.com/shoppingListUpdate.schema.json",
    "type": "object",
    "properties": {
      "user": {
        "type": "string",
        "ref": "user"
      },
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "quantity": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "name",
            "quantity"
          ]
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "user",
      "items"
    ]
  }
  